<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sample Movie"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:id="@+id/detail_movie_title"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:background="@color/accent_material_light"
            android:textColor="#ffffff"
            android:padding="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="185dp"
                android:layout_height="257dp"
                android:scaleType="centerCrop"
                android:padding="8dp"
                android:src="#FF0000"
                android:id="@+id/detail_movies_image_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Release Date:"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sample Release Date"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:id="@+id/detail_movie_release_date" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Rating:"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sample Rating"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:id="@+id/detail_movie_rating" />

                <ToggleButton
                    android:id="@+id/favorite_toggle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textOff="Mark as favourite"
                    android:textOn="Favourite"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Plot:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="Sample Plot"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:id="@+id/detail_movie_Plot" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Trailers:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical" />

        <ListView
            android:id="@+id/trailers_list_view"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Reviews:"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center_vertical" />

        <ListView
            android:id="@+id/reviews_list_view"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

</ScrollView>